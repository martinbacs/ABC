<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.project.abcappen">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".services.BackgroundMusicService"
            android:enabled="true" />

        <activity android:name=".activities.GameActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.WritingStatisticsActivity" />
        <activity android:name=".activities.SpeechActivity" />
        <activity android:name=".activities.ReadingStatisticsActivity"></activity>
    </application>

</manifest>